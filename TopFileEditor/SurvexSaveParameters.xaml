        Title="SurvexSaveParameters" Height="314.062" Width="426.562">
    <Grid>
        <Label />


        <StackPanel Grid.Column="0" Margin="0,216,0,0">
            <Button Name="okButton" Click="okButton_Click" IsDefault="True">OK</Button>
